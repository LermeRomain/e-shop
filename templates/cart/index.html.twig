{% extends 'base.html.twig' %}

{% block title %}Hello CartController!
{% endblock %}

{% block body %}
    {% for message in app.flashes('notice') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}
    <div class="bg-light p-3">
        <h1>Votre panier</h1>
    </div>

    {% if items | length > 0 %}
        <table class="table">
            <thead>
            <tr>
                <th>Produit</th>
                <th>Prix</th>
                <th>Quantit√©</th>
                <th>Total</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                    <th>{{ item.product.name }}</th>
                    <th>{{ item.product.price }}</th>
                    <th>{{ item.quantity }}</th>
                    <th>{{ item.product.price*item.quantity }}</th>
                    <th>
                        <a href="{{ path('remove_cart', {'id': item.product.id}) }}" class="btn">Supprimer</a>
                    </th>
                    <th>
                        <a href="{{ path('remove_quantity_cart', {'id': item.product.id}) }}" class="btn">Retirer</a>
                    </th>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td colspan="3">Total: </td>
                <td>{{ total }}</td>
                <td></td>
            </tr>
            </tfoot>
        </table>
        <button class="btn">Commander</button>
    {% else %}
        <p>Surprise, c'est vide !</p>
    {% endif %}

{% endblock %}
